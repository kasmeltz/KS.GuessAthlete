<Page x:Class="KS.GuessAthlete.WPF.Pages.MainDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KS.GuessAthlete.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="{DynamicResource titMainDashboard}">
    <StackPanel>
        <TextBlock FontWeight="Bold" FontFamily="Arial" FontSize="32" Margin="20, 20, 0, 0" Foreground="Green"><Run Text="{DynamicResource titMainDashboard}" /></TextBlock>
        <TextBlock FontSize="20">Currently importing athlete: </TextBlock>
        <TextBlock Name="txtAthleteName" FontSize="24" ></TextBlock>
        <Button Content="Load Athletes" Click="Button_Click"></Button>
        <Button Content="Pick An Athlete" Click="PickAthlete_Click"></Button>
    </StackPanel>
</Page>
